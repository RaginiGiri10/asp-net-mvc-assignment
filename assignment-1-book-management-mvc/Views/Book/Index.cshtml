﻿@model IEnumerable<assignment_1_book_management_mvc.ViewModel.BookViewModel>
<h1 class="text-center">Book List</h1>
<hr />
<tbody>
</tbody>
<table class="table">
    <thead>
        <tr>
            <th class="text-muted">Id</th>
            <th class="text-muted">Title</th>
            <th class="text-muted">Author</th>
            <th class="text-muted">Rating</th>
            <th class="text-muted">Price</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
         {
          <tr>
            <td colspan="4">No Records Found!!!</td>
          </tr> 
           
         }
            else
            {
                foreach (var book in Model)
                {

                 <tr>
                   <td class="text-success">@book.Id</td>
                   <td class="text-success">@book.Title</td>
                   <td class="text-success">@book.Author</td>
                   <td class="text-success">@book.Rating</td>
                   <td class="text-success">@book.Price</td>
                      <td>
                      @Html.ActionLink("Delete", "Delete", new {id=book.Id})
                  </td>
                      <td>
                        @Html.ActionLink("Edit", "Edit", new { id = book.Id })
                   </td>


                  </tr>
                }
            }



    </tbody>
 </table>





